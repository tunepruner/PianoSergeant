<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicTraining" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/primary_background</item>
        <item name="colorPrimary">@color/primary_foreground</item>
        <item name="colorPrimaryVariant">@color/primary_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/primary_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/ArciformTextViewStyle</item>
        <item name="android:buttonStyle">@style/ArciformButtonStyle</item>
        <item name="radioButtonStyle">@style/ArciformRadioButtonStyle</item>
        <item name="checkboxStyle">@style/ArciformCheckboxStyle</item>

        <item name="colorOnSurface">@color/white</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="ArciformTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ArciformButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ArciformRadioButtonStyle" parent="android:Widget.Holo.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ArciformCheckboxStyle" parent="android:Widget.Holo.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="colorPrimary">@color/white</item>
    </style>



</resources>