<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/chipText</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipSurfaceColor">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">.5dp</item>
        <item name="chipStrokeColor">@color/chip_border</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/arciform</item>
    </style>

    <style name="ArciformTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ArciformButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="android:textAllCaps">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:padding">@dimen/half_default_margin</item>
    </style>

    <style name="ArciformRadioButtonStyle" parent="android:Widget.Holo.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ArciformCheckboxStyle" parent="android:Widget.Holo.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/arciform</item>
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>